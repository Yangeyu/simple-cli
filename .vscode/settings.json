{
  // 文件相关配置
  "files.eol": "\n",
  "files.exclude": {
    "**/.history": true,
  },
  "files.associations": {
    "*.http": "http",
    ".env.dev": "dotenv",
  },
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src",
    "~img": "${workspaceRoot}/src/assets/images"
  },
  // eslint相关配置
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.options": {
    "extensions": [
      ".vue",
    ]
  },
  // 编辑器相关配置
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.wordWrap": "on",
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // windi相关配置
  "css.validate": false,
  "scss.validate": false
}